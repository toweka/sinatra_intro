<form class="" action="/posts/<%= @post[:id] %>" method="POST">

  <div class="">
    <label>Title</label>
    <input type="text" name="title" placeholder="The title of the post" value="<%= @post[:title] %>">
  </div>

  <div class="">
    <label>Body</label>
    <textarea name="body" placeholder="The body of the post"><%= @post[:body] %></textarea>
  </div>

  <div class="">
    <input type="submit" name="" value="Save Post">
  </div>


  <% if(@post[:id] != "") %>
  <input type="hidden" name="_method" value="PUT">
  <% end %>

</form>
